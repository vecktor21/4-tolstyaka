<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Четыре Толстяка</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link href="public/css/style.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/157ef05b37.js" crossorigin="anonymous"></script>
    <script src="public/script/script.js"></script>
</head>
<body>
<%-include ('blocks/header.ejs')%>
<!--тело-->
<section>
    <div class="container-sm">
        <div class="row row-cols-auto align-items-center">
            <div class="col-6 ">Добро Пожаловать</div>
            <div class="col-6"><img src="public/images/bakery-img.jpg" alt="логотип" width="100%"></div>
        </div>
    </div>
</section>
<!--сортировка-->
<section>
    <div class="container-sm">
        <div class="btn-group ">
            <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                Сортировать
            </button>
            <ul class="dropdown-menu">
                <li><hr class="dropdown-divider"><a class="dropdown-item" href="/main?category=<%=content.category%>&sortDirection=asc">Сортировать по возрастанию цен</a></li>
                <li><hr class="dropdown-divider"><a class="dropdown-item" href="/main?category=<%=content.category%>&sortDirection=desc">Сортировать по убыванию цен</a></li>
                <li><hr class="dropdown-divider"><a class="dropdown-item" href="/main?category=<%=content.category%>">Сбросить сортировку</a></li>
            </ul>
        </div>
    </div>
</section>

<!--меню-->
<section>
    <div class="container-sm menu">
        <%content.rows.forEach(cake=>{%>
        <div  id="cake<%=cake['ID']%>">
            <div class="card" style="width: 14rem">
                <img src="<%=cake['image']%>" class="card-img-top" alt="cake">
                <div class="card-body">
                    <h5 class="card-title"><%=cake['name']%></h5>
                    <p class="card-text"><%=cake['discription']%></p>
                    <p class="card-text">Цена: <%=cake['price']%>тг</p>
                    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="modal" id="more<%=cake['ID']%>" data-bs-target="#exampleModal">
                        Подробнее
                    </button>
                    <!-- Всплывающее окно -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel"><%=cake['name']%></h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p class="card-text">Описание: <%=cake['discription']%></p>
                                    <p class="card-text">Состав: <%=cake['composition']%></p>
                                    <p class="card-text">Цена: <%=cake['price']%>тг</p>
                                    <p class="card-text">Вес: <%=cake['weight']%>кг</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                                    <button type="button" class="btn btn-primary cartBtn">В корзину <i class="fas fa-cart-plus"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-primary cartBtn" id="<%=cake['ID']%>">В корзину <i class="fas fa-cart-plus"></i></button>
                </div>
            </div>
        </div>
        <%});%>
    </div>
</section>
<%-include ('blocks/footer.ejs')%>



<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>
</html>

